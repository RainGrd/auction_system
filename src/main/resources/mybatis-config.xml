<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--settings：控制mybatis全局行为-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <!--开启驼峰命名法-->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!--打开延迟加载的开关-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!--将积极加载改为按需加载-->
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>

    <!--设置别名-->
    <typeAliases>
        <!--name：实体类所在的包名-->
        <package name="com.bdqn.auction.settings.entity"/>
        <package name="com.bdqn.auction.workbench.auction.entity"/>
    </typeAliases>

    <!--sql mapper(sql映射文件的位置 -->
    <!--    <mappers>
            &lt;!&ndash;name:是包名,这个包中的所有mapper.xml一次都能加载&ndash;&gt;
            <package name="mapper.xml文件所在的包名"/>
        </mappers>-->

</configuration>
